<section id="content">
	<section class="main">
	  <div class="padder m-t">
	    <div class="row">
	      <div class="col-md-12">
	        <section class="panel">
	          <header class="panel-heading">User Locations</header>
	          <div class="panel-body">
	           <section>
							<div class="table-responsive">
		            <table class="table table-striped m-b-none">
		              <thead>
                    <th>User</th>
										<th>Location</th>
										<th>Intersection</th>
										<th>Area</th>
										<th>Time</th>
		              </thead>
		              <tbody>
										<% @users.each do |user| %>
											<tr>
                        <td><%= user.user.first_name %> <%= user.user.last_name %></td>
												<td><a href="https://www.google.ca/maps/place/<%= user.latitude %>,<%= user.longitude %>" target="_blank">View</a></td>
												<td><%= user.main_intersection %></td>
												<td><%= user.neighborhood %></td>
												<td><%= time_ago_in_words(user.created_at) %> ago</td>
											</tr>
										<% end %>
		              </tbody>
		            </table>
		           </section>
            	</div>	          
          	</div>
	        </section>
        </div>
        <div class="col-md-12">
	        <section class="panel">
	          <div class="panel-body text-muted l-h-2x">
	            <span class="badge"><%= @users_count %></span>
	            <span class="m-r-small">Visits</span>
	            <span class="badge bg-success"><%= @users_today %></span>
	            <span class="m-r-small">Visits today</span>
	          </div>
	        </section>
	      </div>
	    </div>
	  </div>
	</section>
</section>