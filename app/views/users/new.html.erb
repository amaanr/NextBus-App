<section id="content">
    <div class="main padder">
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4 m-t-large">
          <section class="panel">
            <header class="panel-heading text-center">
              Create User
            </header>
            <%= form_for @user do |f| %>
              <div class="panel-body">
              <div class="block">
                <label class="control-label"><%= f.label :first_name %></label>
                <%= f.text_field :first_name, :placeholder => "Your first name", :class => "form-control", :autofocus => true %>
              </div>
              <div class="block">
                <label class="control-label"><%= f.label :last_name %></label>
                <%= f.text_field :last_name, :placeholder => "Your last name", :class => "form-control" %>
              </div>
              <div class="block">
                <label class="control-label"><%= f.label :email %></label>
                <%= f.email_field :email, :class => "form-control", :placeholder => "email@address.com" %>
              </div>
              <div class="block">
                <label class="control-label"><%= f.label :password %></label>
                <%= f.password_field :password, :id => "inputPassword", :placeholder => "Password", :class => "form-control" %>
              </div>
              <div class="block">
                <label class="control-label"><%= f.label :password_confirmation %></label>
                <%= f.password_field :password_confirmation, :id => "inputPassword", :placeholder => "Confirm password", :class => "form-control" %>
              </div>
              <%= f.collection_select :role, User::ROLES, :to_s, :to_s %>
              <%= f.submit "Sign up", :class => "btn btn-info" %>
            <% end %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>