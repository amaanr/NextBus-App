  <section id="content">
    <div class="main padder">
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4 m-t-large">
          <section class="panel">
            <header class="panel-heading text-center">
              Settings
            </header>
            <div class="panel-body">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" , :method => :put }) do |f| %>
                <%= devise_error_messages! %>
                <div class="block">
                  <label class="control-label"><%= f.label :email %></label>
                  <%= f.email_field :email, :autofocus => true, :class => "bg-focus form-control", :name => "email" %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end -%>
                <div class="block">
                  <label class="control-label"><%= f.label :first_name %></label>
                  <%= f.text_field :first_name, :class => "form-control" %>
                </div>
                <div class="block">
                  <label class="control-label"><%= f.label :last_name %></label>
                  <%= f.text_field :last_name, :class => "form-control" %>
                </div>
                <div class="line line-dashed m-t-large"></div>
                <div class="block">
                  <label class="control-label"><%= f.label :password %></label>
                  <%= f.password_field :password, :autocomplete => "off", :class => "bg-focus form-control", :name => "password", :placeholder => "New password" %>
                </div>
                <div class="block">
                  <label class="control-label"><%= f.label :password_confirmation %></label>
                  <%= f.password_field :password_confirmation, :class => "bg-focus form-control", :placeholder => "Password confirmation" %>
                </div>
                <div class="block">
                  <label class="control-label"><%= f.label :current_password %></label>
                  <%= f.password_field :current_password, :class => "bg-focus form-control", :placeholder => "Current password" %>
                </div>
                <div class="line line-dashed m-t-large"></div>
                <small>
                  <%= link_to('Delete account?', registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "pull-right m-t-mini") %>
                </small>
                <%= f.submit "Save", :class => "btn btn-info" %>
              <% end -%>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>