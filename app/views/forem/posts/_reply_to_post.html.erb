<section id="content">
  <section class="main padder">
    <div class="col-lg-6">
      <section class="panel">
        <header class="panel-heading">Chat</header>
        <section class="panel-body chat-list">
          <article id="chat-id-1" class="chat-item media arrow arrow-left">
            <a href="#" class="pull-left thumb-small avatar"><%= forem_avatar(post.user, :size => 60, :class => "img-circle") %></a>
            <section class="media-body">
              <div class="panel bg-lighter text-small m-b-none">
                <div class="panel-body">
                <%= forem_format(post.text) %>
                </div>
              </div>
              <small class="text-muted"><i class="icon-ok text-success"></i><time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time></small>
            </section>
          </article>
          <article id="chat-id-1" class="chat-item media arrow arrow-right">
            <a class="pull-right thumb-small"><span class="btn btn-circle btn-xs"><i class="icon-user"></i></span></a>
            <section class="media-body">
              <div class="panel text-small m-b-none">
                <div class="panel-body">
                Lorem ipsum dolor sit amet, consecteter adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</div>
              </div>
              <small class="text-muted"><i class="icon-ok text-success"></i> 1 minutes ago</small>
            </section>
          </article>
          <!-- chat form -->
          <article class="chat-item media" id="chat-form">
            <a class="pull-left thumb-small avatar"><img src="images/avatar.jpg" class="img-circle"></a>
            <section class="media-body">
              <form action="" class="m-b-none">
                <div class="input-group">
                  <input type="text" placeholder="Say something" class="form-control">
                  <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">SEND</button>
                  </span>
                </div>
              </form>
            </section>
          </article>
        </section>
      </section>
    </div>
  </section>
</section>

<section class="panel">
  <div class="panel-body">
    <a name='post-<%= post.id %>'></a>
    <div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> span10'>
      <div class='user span2'>
        <div class='username'>
          <%= link_to_if Forem.user_profile_links, post.user, [main_app, post.user] %>
        </div>
        <div class='icon'><%= forem_avatar(post.user, :size => 60) %></div>
      </div>

      <div class='contents span7'>
        <time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time>
        <%= forem_format(post.text) %>

        <% if post.reply_to %>
          <span class='in_reply_to'>
            <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user}", "#post-#{post.reply_to.id}" %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</section>